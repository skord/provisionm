<table class='table'>
	<thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
	</thead>
<tbody>
<% @node_categories.each do |node_category| %>
  <tr>
    <td><%= node_category.name %></td>
    <td>
			<%= link_to 'Show', node_category, :class => 'btn' %>
    	<%= link_to 'Edit', edit_node_category_path(node_category), :class => 'btn btn-primary' %>
    	<%= link_to 'Destroy', node_category, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %>
		</td>
  </tr>
<% end %>
</tbody>
</table>



