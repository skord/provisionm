<%= simple_form_for(@building) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
		<div id='rooms'>
			<%= f.simple_fields_for :rooms do |room| %>
				<%= render 'room_fields', :f => room %>
			<% end %>
		</div>
  </div>
	

  <div class="form-actions">
    <%= link_to_add_association 'Add Room', f, :rooms, :class => 'btn btn-success' %> <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
