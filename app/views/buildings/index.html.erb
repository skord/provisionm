<table class='table'>
	<thead>
	  <tr>
	    <th>Building</th>
	    <th>City, State</th>
			<th>Nodes</th>
	  </tr>
	</thead>
	<tbody>
		<% @buildings.each do |building| %>
		  <tr>
		    <td><%= link_to building.name, building %></td>
				<td><%= building.city %><%= ',' unless building.state.blank? %> <%= building.state %></td>
				<td><%= building.nodes.count %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Location', new_building_path, :class => 'btn btn-success admin' %>
