<table class='table table-striped'>
	<thead>
  <tr>
    <th>Manufacturer</th>
		<th>Known Products</th>
		<th>Matching Nodes</th>
  </tr>
	</thead>
	<tbody>
		<% @manufacturers.each do |manufacturer| %>
		  <tr>
		    <td><%= link_to manufacturer.name, manufacturer %></td>
				<td><%= manufacturer.products.count %></td>
				<td><%= manufacturer.nodes.count %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<br />
