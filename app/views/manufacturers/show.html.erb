<p>
  <b>Name:</b>
  <%= @manufacturer.name %>
</p>

<table class='table'>
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Product Model Number</th>
			<th>Node Count</th>
		</tr>
	</thead>
	<tbody>
		<%= render :partial => 'product', :collection => @manufacturer.products %>
	</tbody>
</table>
<%= link_to 'Edit', edit_manufacturer_path(@manufacturer), :class => 'btn btn-primary admin' %>
<%= link_to 'Delete', @manufacturer, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger admin' %>
<%= link_to 'Back', manufacturers_path, :class => 'btn' %>
