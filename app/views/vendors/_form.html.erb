<%= simple_form_for(@vendor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :fax %>
		<h3>Support Contracts</h3>
		<div id='support-contracts'>
		<%= f.simple_fields_for :support_contracts do |support_contract| %>
			<%= render 'support_contract_fields', :f => support_contract %>
		<% end %>

		</div>
  </div>

  <div class="form-actions">
    <%= link_to_add_association 'Add Support Contract', f, :support_contracts, :class => 'btn btn-success' %>	
		<%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
